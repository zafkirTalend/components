<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="basic">

    <requiredProperties>
        <requiredProperty key="componentName">
            <defaultValue>${artifactId}</defaultValue>
        </requiredProperty>
        <requiredProperty key="componentClass">
            <defaultValue>${componentName.substring(0,1).toUpperCase()}${componentName.substring(1)}</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>${groupId}</defaultValue>
        </requiredProperty>
        <requiredProperty key="packageTalend">
            <defaultValue>org.talend.components</defaultValue>
        </requiredProperty>
        <requiredProperty key="runtimeVersion"/>
    </requiredProperties>

    <fileSets>
        <!-- Metadata for runtime module -->
        <fileSet filtered="true" packaged="true">
            <directory>__artifactId__-runtime___runtimeVersion__/src/main/java/</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
                <directory>__artifactId__-runtime___runtimeVersion__/src/main/resources/</directory>
        </fileSet>
        <fileSet filtered="true">
            <directory>__artifactId__-runtime___runtimeVersion__</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <!-- Metadata for definition module - main -->
        <fileSet filtered="true" packaged="true">
            <directory>__artifactId__-definition/src/main/java/</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
                <directory>__artifactId__-definition/src/main/resources/</directory>
        </fileSet>
        <fileSet filtered="true">
            <directory>__artifactId__-definition</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <!-- Metadata for definition module - test -->
        <fileSet filtered="true" packaged="true">
            <directory>__artifactId__-definition/src/test/java/</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>__artifactId__-definition/src/test/resources/</directory>
        </fileSet>
        <fileSet filtered="true">
            <directory>__artifactId__-definition</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
    </fileSets> 
</archetype-descriptor>